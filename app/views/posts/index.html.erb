<% @posts.each do |post| %>
<div>

  <p>投稿ユーザー画像：<%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>温泉場所：<%= post.onsen_place %></p>
  <p>温泉名：<%= post.onsen_name %></p>
  <p>説明：<%= post.caption %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
  <p>画像:<%= attachment_image_tag(post, :image, :fill, 60, 60, fallback: '') %></p>

</div>
<% end %>