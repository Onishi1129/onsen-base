<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'profile', user: @user, users: @users %>
      <h2 class="mt-3"></h2>
      <%= render 'posts/form', post: @post %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>投稿履歴</h2>
      <%= link_to(@user.name, "/users/#{@user.id}") %>
      <%= render 'posts/index',post: @posts %>
    </div>
  </div>
</div>